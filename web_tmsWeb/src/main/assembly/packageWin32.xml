<assembly xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>win32</id>
    <formats>
        <format>war</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory><!-- 包含基本文件夹，即打包文件中是否包含命令的文件夹 -->
    <fileSets>
        <!-- 封装打包文件 --> 
        <fileSet>
            <directory>../../../Assembly/installer/win32</directory>
            <outputDirectory></outputDirectory>
        </fileSet>
        
        <fileSet>
            <directory>src/main/scripts</directory>
            <includes>
                <include>Install.bat</include>
                <include>Uninstall.bat</include>
            </includes>
            <outputDirectory>bin/</outputDirectory>
        </fileSet>
        
        <fileSet>
            <directory>src/main/scripts</directory>
            <includes>
                <include>停止.bat</include>
                <include>重启.bat</include>
                <include>使用说明.txt</include>
                <include>更新记录.txt</include>
            </includes>
            <outputDirectory></outputDirectory>
        </fileSet>
        
        <fileSet>
            <directory>src/main/scripts/win32</directory>
            <outputDirectory></outputDirectory>
        </fileSet>
        
        <fileSet>
            <directory>target/classes/conf</directory>
            <includes>
                <include>System.ini</include>
            </includes>
            <outputDirectory>conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/</directory>
            <includes>
                <include>${project.build.finalName}.war</include>
            </includes>
            <outputDirectory>tomcat/webapps</outputDirectory>
        </fileSet>
        
    </fileSets>
    
