<assembly xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>update</id>
    <formats>
        <format>war</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- 封装打包文件 -->
        <fileSet>
            <directory>../../../Assembly/update/1.5.x</directory>
            <outputDirectory></outputDirectory>
        </fileSet>
        
        <fileSet>
            <directory>src/main/scripts</directory>
            <includes>
                <include>更新.bat</include>
                <include>升级说明.txt</include>
                <include>更新记录.txt</include>
            </includes>
            <outputDirectory></outputDirectory>
        </fileSet>
        
        <fileSet>
            <directory>src/main/scripts</directory>
            <includes>
                <include>Install.bat</include>
                <include>Uninstall.bat</include>
            </includes>
            <outputDirectory>pkg/app/bin</outputDirectory>
        </fileSet>
        
        <fileSet>
            <directory>src/main/scripts</directory>
            <includes>
                <include>停止.bat</include>
                <include>重启.bat</include>
                <include>使用说明.txt</include>
                <include>更新记录.txt</include>
            </includes>
            <outputDirectory>pkg/app</outputDirectory>
        </fileSet>
        
        <fileSet>
            <directory>target/</directory>
            <includes>
                <include>${project.build.finalName}.war</include>
            </includes>
            <outputDirectory>pkg/app/tomcat/webapps</outputDirectory>
        </fileSet>
        
    </fileSets>
    
