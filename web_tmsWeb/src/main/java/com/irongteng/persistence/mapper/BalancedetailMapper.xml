    <!-- 批量删除 -->
    <delete id="deleteBatchBycustomerID" parameterType="java.util.List">
        DELETE FROM balancedetail WHERE
        customerID in
        <foreach collection="list" item = "item" open="(" separator="," close=")">
        #{item}  
        </foreach>
    </delete>
    
    <resultMap id="balancedetailResult" type="Balancedetail">
        <id property="id" jdbcType="INTEGER" column="ID" />
         <result property="customerName" jdbcType="VARCHAR" column="customerName"/>
        <result property="customerID" jdbcType="INTEGER" column="customerID"/>
        <result property="behaviorID" jdbcType="INTEGER" column="behaviorID"/>
        <result property="balanceType" jdbcType="VARCHAR" column="balanceType"/>
        <result property="recordDate" jdbcType="TIMESTAMP" column="recordDate"/>
        <result property="detail" jdbcType="VARCHAR" column="detail"/>  
