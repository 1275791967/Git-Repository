<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.irongteng.persistence.mapper.AreaMonitorMapper">
    <!-- 
    <cache />
     -->
    
    <resultMap id="areaMonitorResult" type="AreaMonitor">
        <result property="id" jdbcType="INTEGER" column="ID"/>
        <result property="name" jdbcType="VARCHAR" column="Name" />
        <result property="province" jdbcType="VARCHAR" column="Province" />
        <result property="city" jdbcType="VARCHAR" column="City" />
    </resultMap>
    <sql id="Base_Column_List">
        ID,
        Name,
        Province,
        City
    </sql>
    <select id="load" parameterType="Integer" resultMap="areaMonitorResult">
        SELECT 
            <include refid="Base_Column_List" />
        FROM t_area_monitor 
        WHERE 
            ID = #{id} 
    </select>
    
    <select id="findByName" parameterType="java.lang.String" resultMap="areaMonitorResult">
        select 
            <include refid="Base_Column_List" />
        from t_area_monitor where Name = #{name}
        limit 1
    </select>
    
    <!-- 查询所有的ID -->
    <select id="findAllIds" resultType="Integer">
        SELECT ID FROM t_area_monitor
    </select>

    <!-- 按Id删除 -->
    <delete id="delete" parameterType="Integer">
        DELETE FROM t_area_monitor WHERE
        ID = #{id} 
    </delete>
    
    <!-- 插入 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_area_monitor (
            Name,
            Province,
            City,
            RecordTime
        ) VALUES (
            #{name},
            #{province},
            #{city},
            #{recordTime}
        )
    </insert>
     <!-- 批量插入 -->
    <insert id="addBatch" parameterType="java.util.List">
        INSERT INTO t_area_monitor (
            Name,
            Province,
            City,
            RecordTime
        ) VALUES 
        <foreach item="item" index="index" collection="list" separator=",">
        (
            #{item.name},
            #{item.province},
            #{item.city},
            #{item.recordTime}
        )
        </foreach> 
    </insert>
    
    <select id="countAll" resultType="Integer">
        SELECT count(0) FROM t_area_monitor    
    </select>
    
    <select id="findAll" resultMap="areaMonitorResult">
        SELECT 
            <include refid="Base_Column_List" />
        FROM t_area_monitor
    </select>
    <!-- 更新 -->
    <update id="update" parameterType="AreaMonitor">
        UPDATE t_area_monitor 
        SET
            Name = #{name},
            Province = #{province},
            City = #{city},
            RecordTime = #{recordTime}
        WHERE 
            ID = #{id} 
    </update>
    <!-- 条件更新 -->
    <update id="updateSelective" parameterType="AreaMonitor">
        UPDATE t_area_monitor 
            <set>
                <if test="name!=null">
                Name = #{name},
                </if>
                <if test="province!=null">
                Province = #{province},
                </if>
                <if test="city!=null">
                City = #{city},
                </if>
                <if test="RecordTime!=null">
                RecordTime = #{recordTime},
                </if>
                
            </set>
        WHERE 
            ID = #{id}
    </update>
    <!-- 批量更新 -->
    <update id="updateBatch" parameterType="java.util.List">
        <foreach collection="list" item="item"  index="index" open="" close="" separator=";">
            UPDATE t_area_monitor 
            SET
                Name = #{item.name},
                Province = #{item.province},
                City = #{item.city},
                RecordTime = now()
            WHERE 
                ID = #{id}
        </foreach>
    </update>
    <!-- 批量条件更新 -->
    <update id="updateBatchSelective" parameterType="java.util.List">
        <foreach collection="list" item="item"  index="index" open="" close="" separator=";">
            UPDATE t_area_monitor 
            <set>
                <if test="item.name!=null">
                Name = #{item.name},
                </if>
                <if test="item.province!=null">
                Province = #{item.province},
                </if>
                <if test="item.city!=null">
                City = #{item.city},
                </if>
                <if test="item.RecordTime!=null">
                RecordTime = #{item.recordTime},
                </if>
            </set>
            WHERE 
                ID = #{id}
        </foreach>
    </update>
    
    <select id="isUniqueName" parameterType="map" resultType="Integer">
        select count(0) as c
        from t_area_monitor where ID != #{id} and Name = #{name}
    </select>
    
    <select id="getLastRecordTime" resultType="java.util.Date">
        select max(RecordTime) as c from t_area_monitor
    </select>
    
    <select id="isUniqueProvinceCity" parameterType="map" resultType="Integer">
        select count(0) as c
        from t_area_monitor where ID != #{id} and Province = #{province} and City = #{city}
    </select>
    
    <select id="findPageBreakByCondition" resultMap="areaMonitorResult" parameterType="map">
        SELECT 
            <include refid="Base_Column_List" />
        from t_area_monitor 
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="keywords != null">
                AND (
                    Name LIKE "%"#{keywords}"%"
                    or Province LIKE "%"#{keywords}"%"
                    or City LIKE "%"#{keywords}"%"
                )
              </if>
          </trim>
        
        <choose>
            <when test="orderField !=null and orderField !=''">
                 ORDER BY ${orderField} <if test="orderDirection != null and orderDirection != ''">${orderDirection}</if>
            </when>
            <otherwise>
                 order by ID DESC
            </otherwise>
        </choose>
           
    </select>
    
    <select id="findNumberByCondition" resultType="Integer" parameterType="map">
        select count(0) as c from t_area_monitor

        <trim prefix="WHERE" prefixOverrides="AND|OR">
            
            <if test="keywords != null">
                AND (
                    Name LIKE "%"#{keywords}"%"
                    or Province LIKE "%"#{keywords}"%"
                    or City LIKE "%"#{keywords}"%"
                )
              </if>
          </trim>

    </select>
    
</mapper>

